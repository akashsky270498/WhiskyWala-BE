# Use Node 20 Alpine
FROM node:20-alpine

# Set Working Directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install all dependencies (including dev for ts-node-dev)
RUN npm install

# Copy project files
COPY . .

# Build TypeScript -> dist/
RUN npm run build

# Expose PORT from Render
EXPOSE 7555

# Use environment variable PORT provided by Render
ENV PORT=7555

# Start server using compiled dist for production
CMD ["node", "dist/index.js"]
